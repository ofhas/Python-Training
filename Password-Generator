
import random

def password_generator():
    password = random.choices("abcdefghiFGHIJKLMNOPQRSTjklmnopqrstuvW123456789~@$wABCDEUV%^&*!", k = 15)#getting a 15 characters random sequence
    print("The password is:")
    print("".join(password))


key = int(input("Please press 1 to generate a password:"))
if key == 1:
    password_generator()
while key != 1:
    key = int(input("You've entered an invalid key, please press 1:"))
    if key == 1:
        password_generator()

