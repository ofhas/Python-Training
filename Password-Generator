
import random

def password_generator(num_of_chars):
    password = random.choices("abcdefghiFGHIJKLMNOPQRSTjklmnopqrstuvW123456789~@$wABCDEUV%^&*!", k = num_of_chars)#getting a 15 characters random sequence
    print("The password is:")
    print("".join(password))


key = int(input("Please press 1 to generate a password:"))
number_of_chars = int(input("Plesse a number in order to detrmine the length of your password:"))
if key == 1:
    password_generator(num_of_chars)
while key != 1:
    key = int(input("You've entered an invalid key, please press 1:"))
    if key == 1:
        password_generator()

